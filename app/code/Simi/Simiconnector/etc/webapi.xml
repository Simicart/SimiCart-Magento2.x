<?xml version="1.0"?>

<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/simiconnector/:resource/:resource_id" method="GET">
        <service class="Simi\Simiconnector\Api\SimiconnectorapiInterface" method="hasId"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/simiconnector/:resource" method="GET">
        <service class="Simi\Simiconnector\Api\SimiconnectorapiInterface" method="noId"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/simiconnector/:resource" method="POST">
        <service class="Simi\Simiconnector\Api\SimiconnectorapiInterface" method="noId"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/simiconnector/:resource" method="PUT">
        <service class="Simi\Simiconnector\Api\SimiconnectorapiInterface" method="noId"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/simiconnector/:resource/:resource_id" method="PUT">
        <service class="Simi\Simiconnector\Api\SimiconnectorapiInterface" method="hasId"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/simiconnector/:resource/:resource_id" method="DELETE">
        <service class="Simi\Simiconnector\Api\SimiconnectorapiInterface" method="hasId"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>
